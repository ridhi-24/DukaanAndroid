<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_View="http://schemas.android.com/tools"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="16dp"
    android:background="@color/white"
    app:cardCornerRadius="4dp">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_grid_card"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text=""
        android:id="@+id/order"
        android:textSize="14sp"
        android:textColor="@color/light_black"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new"
        android:id="@+id/new_tag"
        app:layout_constraintLeft_toRightOf="@+id/order"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="vvvvvvv"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        />

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/image_order"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/order"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="16dp"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_name"
        android:text="item"
        android:textSize="13sp"
        android:textColor="@color/light_grey"
        android:gravity="left"
        android:layout_marginLeft="12dp"
        android:singleLine="true"
        app:layout_constraintLeft_toRightOf="@id/image_order"
        app:layout_constraintTop_toTopOf="@+id/image_order"
        />
<androidx.appcompat.widget.AppCompatTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/price"
    android:textSize="20sp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="2dp"
    android:text="price"
    android:layout_marginBottom="12dp"
    android:textColor="@color/dark_blue"
    app:layout_constraintLeft_toRightOf="@id/image_order"
    app:layout_constraintTop_toBottomOf="@+id/item_name"

    />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/order_status"
        android:textSize="14sp"
        android:textColor="#17B31B"
        android:text="paid"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
